@model WebProgramlamaProje.ViewModels.CategoryListViewModel
@* Proje adının WebProgramlamaProje olduğundan emin ol *@

@{
    ViewData["Title"] = "Kategori Yönetimi (Admin)";
}

<h3>Kategori Yönetimi</h3>
<p>
    @* Yeni Kategori Ekle butonu *@
    <a asp-action="Create" class="btn btn-primary">Yeni Kategori Ekle</a>
</p>

@* Ödev Notu: Bootstrap ile temiz arayüz zorunluluğu karşılandı[cite: 14]. *@
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @* View Model'in içindeki Categories listesi üzerinde döngü başlatılır *@
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    @* CRUD: Güncelleme (Edit) *@
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-success btn-sm">Güncelle</a>

                    @* CRUD: Silme (Delete) - Güvenlik için POST formunda yapılır *@
                    <form asp-action="Delete" asp-route-id="@item.CategoryId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?');">
                            Sil
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        // İstemci tarafı (Client-side) doğrulama scriptlerini ekler
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}