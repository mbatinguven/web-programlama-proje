@using Microsoft.AspNetCore.Identity
@using WebProgramlamaProje.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - WebProgramlamaProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProgramlamaProje.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-layers-fill me-2"></i>WebProgramlamaProje
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i>Home
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (!User.IsInRole("Instructor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Course" asp-action="Index">
                                        <i class="bi bi-journal-bookmark-fill me-1"></i>Tüm Kurslar
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Student") && !User.IsInRole("Instructor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Course" asp-action="MyCourses">
                                        <i class="bi bi-card-checklist me-1"></i>Kayıtlı Kurslarım
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-success" asp-area="" asp-controller="Course" asp-action="ApplyAsInstructor">
                                        <i class="bi bi-person-plus-fill me-1"></i>Eğitmen Başvurusu
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Instructor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-primary" asp-area="" asp-controller="Course" asp-action="MyCoursesTeaching">
                                        <i class="bi bi-kanban-fill me-1"></i>Kurslarımı Yönet
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Course" asp-action="Create">
                                        <i class="bi bi-plus-circle-fill me-1"></i>Yeni Kurs Aç
                                    </a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-light" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-shield-lock-fill me-1"></i>Admin Panel
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Course" asp-action="ManageApplications">Başvuruları Onayla</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Kullanıcıları Yönet</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="Index">Kategori Yönetimi</a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-file-lock2-fill me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item d-flex align-items-center me-3 text-light">
                                <i class="bi bi-person-circle fs-5 me-2"></i>
                                <span>Hello, @UserManager.GetUserName(User)!</span>
                            </li>
                            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-flex">
                                <input type="hidden" name="returnUrl" value="/" />
                                <button type="submit" class="btn btn-outline-light btn-sm">
                                    <i class="bi bi-box-arrow-right me-1"></i>Çıkış Yap
                                </button>
                            </form>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="bi bi-person-plus me-1"></i>Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1 mt-5 pt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="professional-footer mt-auto bg-dark text-light py-3">
        <div class="container text-center">
            <p class="mb-1">&copy; 2025 - WebProgramlamaProje</p>
            <div class="footer-links mb-2">
                <a class="text-light text-decoration-none mx-2" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> |
                <a class="text-light text-decoration-none mx-2" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
            </div>
            <div class="social-icons mb-2">
                <a href="https://twitter.com" target="_blank" class="text-light mx-2 fs-5"><i class="bi bi-twitter"></i></a>
                <a href="https://facebook.com" target="_blank" class="text-light mx-2 fs-5"><i class="bi bi-facebook"></i></a>
                <a href="https://linkedin.com" target="_blank" class="text-light mx-2 fs-5"><i class="bi bi-linkedin"></i></a>
            </div>
            <p style="font-size:0.8rem;">Made with Mustafa Batın Güven</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
