@using Microsoft.AspNetCore.Identity
@using WebProgramlamaProje.Models // ApplicationUser için gerekli
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @* --- GİRİŞ YAPILMIŞ DURUM --- *@
        <li class="nav-item">
            @* Kullanıcı adını gösterirken, link rengini Navbar'a uyduruyoruz *@
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                @* Çıkış butonunu daha şık hale getiriyoruz *@
                <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        @* --- MİSAFİR/ÇIKIŞ YAPILMIŞ DURUM --- *@

        <li class="nav-item">
            @* Kayıt Ol (Vurgulu Buton Stili) *@
            <a class="btn btn-outline-light btn-sm mx-1" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
        </li>
        <li class="nav-item">
            @* Giriş Yap (Daha belirgin Buton Stili) *@
            <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
        </li>
    }
</ul>