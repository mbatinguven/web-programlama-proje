@model IEnumerable<WebProgramlamaProje.Models.Course>

@{
    ViewData["Title"] = "Kayıtlı Kurslarım";
}

<h3 class="text-white display-6 mb-4">🎓 Kayıtlı Kurslarım</h3>
<hr class="text-white" />

@if (Model != null && Model.Any())
{
    <div class="list-group shadow">
        @foreach (var course in Model)
        {
            <a asp-action="Details" asp-route-id="@course.CourseId"
               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <span class="fw-semibold">@course.Title</span>
                <span class="badge bg-primary">@course.Category.Name</span>
            </a>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        Henüz hiçbir kursa kayıtlı değilsiniz.
    </div>
}
