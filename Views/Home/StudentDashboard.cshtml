@model dynamic

@{
    ViewData["Title"] = "Öğrenci Paneli";
}

<div class="container mt-5">

    <div class="row">
        <div class="col-lg-12">
            <h1 class="display-5 text-primary mb-4">Tekrar Hoş Geldiniz, @User.Identity.Name!</h1>
        </div>
    </div>

    @* --- BÖLÜM 1: DEVAM ET VE İSTATİSTİK KARTLARI --- *@
    <div class="row mb-5">

        <div class="col-md-6 mb-4">
            <div class="card shadow-lg p-4 h-100 bg-success text-primary">
                <div class="card-body">
                    <h5 class="card-title">Son Kursunuz</h5>
                    <p class="card-text lead">
                        Şu anda **"ASP.NET Core Mimarisi"** kursunun 3. modülündesiniz. Hemen devam edin!
                    </p>
                    <a href="#" class="btn btn-warning mt-3">Derse Devam Et</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow p-4 h-100 card-course">
                <div class="card-body">
                    <h5 class="card-title text-primary">Kayıtlı Kurs</h5>
                    <h2 class="display-4 text-primary">5</h2>
                    <a asp-controller="Course" asp-action="MyCourses" class="btn btn-sm btn-outline-primary">Tüm Kayıtlarım</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow p-4 h-100 card-course">
                <div class="card-body">
                    <h5 class="card-title text-primary">Yeni Fırsatlar</h5>
                    <h2 class="display-4 text-primary">25+</h2>
                    <a asp-controller="Course" asp-action="Index" class="btn btn-sm btn-outline-success">Yeni Kurslara Göz At</a>
                </div>
            </div>
        </div>

    </div>

    <hr class="my-4" />

    @* --- BÖLÜM 2: GÜVENLİK VE YÖNETİM VURGUSU --- *@
    <div class="row">
        <div class="col-12">
            <h4 class="mb-4 text-primary">Hızlı Erişim</h4>
        </div>

        <div class="col-md-4">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-info w-100 mb-2 text-primary">Profil Ayarları</a>
        </div>
        <div class="col-md-4">
            <a asp-controller="Course" asp-action="ApplyAsInstructor" class="btn btn-outline-warning w-100 mb-2 text-primary">Eğitmen Olmak İster misiniz?</a>
        </div>
    </div>

</div>